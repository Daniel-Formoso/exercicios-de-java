/*Tem-se um conjunto de dados contendo a altura e o gênero (M, F) de N pessoas. Fazer um programa
que calcule e escreva a maior e a menor altura do grupo, a média de altura das mulheres, e o número
de homens. 
*/

package applicationEx10;

import java.util.Locale;
import java.util.Scanner;

public class dados_pessoas {

	public static void main(String[] args) {

		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		int n;
		double altura;
		String sexo = 'm';
		
		System.out.print("Quantos valores cada vetor vai receber? ");
		n = sc.nextInt();
		
		char[] vetorGen = new char[n];
		double[] vetorAltura = new double[n];
		
		for (int i = 0; i < vetorAltura.length; i++) {
			System.out.printf("Altura da %dª pessoa. ", i + 1);
			vetorAltura[i] = sc.nextDouble();
			System.out.printf("Gênero da %dª pessoa. ", i + 1);
			vetorGen[i] = sc.next().charAt(0);
		}
		
		
		
		
	}

}
